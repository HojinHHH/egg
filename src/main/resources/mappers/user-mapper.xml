<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userMapper">

	<!-- 전체 회원 가져오기 -->
	<select id="memberSelectAll" resultType="memberDTO">
		SELECT * FROM tbl_member
	</select>
	
	<!-- 회원 아이디, 닉네임, 이메일로 검색 -->
	<select id="memberSearch" parameterType="map" resultType="memberDTO">
		SELECT * FROM tbl_member WHERE 
			${searchOption} LIKE '%'||#{searchKeyword}||'%'
	</select>
	
	<!-- 회원 강제 탈퇴 (유형번호 논의 필요)-->
	<update id="memberExpulsion" parameterType="map">
		UPDATE tbl_member SET type = 9 
			WHERE user_id IN
		<foreach collection="userList" item="user_id" open="(" close=")" separator=",">
			${user_id}
		</foreach>
	</update>
	
	<!-- 회원 블랙리스트 등록 -->
	<update id="memberBlacklistRegist" parameterType="map">
		UPDATE tbl_member SET blacklist = 1 
			WHERE user_id IN
		<foreach collection="userList" item="user_id" open="(" close=")" separator=",">
			${user_id}
		</foreach>
	</update>
	
	<!-- test -->
	<select id="test" parameterType="memberDTO">
		INSERT INTO tbl_member VALUES
			(#{user_id}, #{password}, #{nickname}, #{phone}, #{email}, #{address}, SYSDATE, #{profile_path}, #{type}, #{blacklist})
	</select>

</mapper>